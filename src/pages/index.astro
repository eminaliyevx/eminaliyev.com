---
import {
  Divider,
  Education,
  Experience,
  Hero,
  Skills,
  Summary,
} from "@/components";
import { Layout } from "@/layouts";
---

<Layout
  seo={{
    title: "Emin Aliyev",
    description: "I am an experienced software developer based in Azerbaijan.",
    openGraph: {
      basic: {
        title: "Emin Aliyev",
        type: "website",
        image: "https://eminaliyev.com/assets/fYQ2G4nX_7kVs5.webp",
      },
    },
  }}
>
  <Hero />

  <Divider class="my-4" />

  <Summary />

  <Divider class="my-4" />

  <Experience />

  <Divider class="my-4" />

  <Education />

  <Divider class="my-4" />

  <Skills />
</Layout>

<script>
  const stickyHeading = document.querySelector(
    "[data-sticky-heading]",
  ) as HTMLDivElement;
  const downloadCvButton = document.querySelector(
    "[data-download-cv]",
  ) as HTMLAnchorElement;

  const observer = new IntersectionObserver(
    ([entry]) => stickyHeading.classList.toggle("hidden", entry.isIntersecting),
    { rootMargin: "-120px 0px 0px 0px" },
  );

  observer.observe(downloadCvButton);
</script>
